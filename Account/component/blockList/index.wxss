.blocklist {
    width: 100%;
    padding: 20rpx 20rpx 20rpx 10rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.bl-left {
    height: 100%;
    display: flex;
}

.bl-box {
    display: flex;
    align-items: center;
    justify-content: center;
}

.bl-box-padding {
    padding-right: 30rpx;
}

.bl-left-box-img {
    width: 60rpx;
    height: 60rpx;
}

.bl-box image {
    height: 100%;
    width: 100%;
}

.bl-right {
    height: 100%;
}

.blackfontsize20 {
    font-size: 28rpx;
}