/**index.wxss**/

.main-page {
    height: 100%;
    color: rgba(0, 0, 0, .8);
}

.a-count {
    font-size: 50rpx;
    display: flex;
    box-sizing: border-box;
    padding: 10rpx 0 10rpx;
    color: rgba(255, 255, 255, 1);
}

.a-count-spend,
.a-count-proportion {
    width: 34%;
    text-align: center;
}

.a-count-date {
    width: 28%;
    box-sizing: border-box;
    padding-left: 40rpx;
    border-right: 1px solid rgb(88, 88, 88);
}


/* tabs */

.tab {
    background: #fff;
    position: relative;
}

.tab_select {
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 15rpx 0;
}

.tab_selects {
    border: 2px solid #3a3a3a;
    border-radius: 8rpx;
    box-sizing: border-box;
    font-size: 22rpx;
    display: flex;
}

.tab_selects0 {
    box-sizing: border-box;
    width: 200rpx;
    padding: 5rpx 0;
    text-align: center;
}

.tab_selected {
    color: #fff;
    background: #3a3a3a;
}

.tabs {
    position: absolute;
    color: #3a3a3a;
    width: 100%;
}

.a-chart {
    /* height: calc(100% - 362rpx); */
    height: 400rpx;
    position: relative;
    background: #fff;
    box-sizing: border-box;
}

.a-category {
    position: absolute;
    background: #fff;
    width: 420rpx;
    height: 87rpx;
    border-radius: 43.5rpx;
    box-shadow: 0 0 10rpx 1rpx #ebeaea;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
}

.a-category-icon {
    width: 33.3%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.a-category-icon-box {
    width: 55rpx;
    height: 55rpx;
}

.a-category-icon-img {
    width: 100%;
    height: 100%;
}

.a-chart-data {
    width: 100%;
    height: 100%;
}

.a-list {
    width: 100%;
    padding: 0rpx 35rpx;
    box-sizing: border-box;
    display: flex;
    background: #fff;
    flex-direction: column;
    border-top: 1px solid rgb(228, 228, 228);
    border-bottom: 2px solid #fff;
}

.a-list-block {
    border-bottom: 1px solid rgb(228, 228, 228);
}

.a-list-block:last-child {
    border-bottom: none;
}


/* 针对性样式 */

.garyFontsize18rpx {
    color: rgb(128, 128, 128);
    font-size: 20rpx;
}

.whiteFontsize18rpx {
    color: #fff;
    font-size: 20rpx;
}