/**index.wxss**/

.main-page {
    height: 100%;
    color: rgba(0, 0, 0, .8);
}

.a-count {
    height: 362rpx;
    font-size: 80rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.a-count-title {
    margin-top: 60rpx;
    font-size: 40rpx;
}

.a-chart {
    /* height: calc(100% - 362rpx); */
    height: 748rpx;
    position: relative;
    background: #fff;
    box-sizing: border-box;
}

.a-category {
    position: absolute;
    background: #fff;
    width: 420rpx;
    height: 87rpx;
    border-radius: 43.5rpx;
    box-shadow: 0 0 10rpx 1rpx #ebeaea;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
}

.a-category-icon {
    width: 33.3%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.a-category-icon-box {
    width: 55rpx;
    height: 55rpx;
}

.a-category-icon-img {
    width: 100%;
    height: 100%;
}

.a-chart-date {
    text-align: center;
    padding-top: 60rpx;
    margin-bottom: 30rpx;
}

.a-chart-data {
    width: 100%;
    height: calc(100% - 142rpx);
}

.a-list {
    width: 100%;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    background: #ffcc33;
}

.a-list-block {
    width: 50%;
    box-sizing: border-box;
    padding: 20rpx 25rpx;
}